<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/coupon_background">


    <ImageView
        android:id="@+id/communityImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/img_round_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/communityName"
        android:layout_width="269dp"
        android:layout_height="32dp"
        android:text="@string/default_community"
        android:textColor="@android:color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/communityRecentMessage"
        android:layout_width="268dp"
        android:layout_height="58dp"
        android:layout_gravity="bottom"
        android:text="@string/recentGroupMessage"
        android:textColor="@color/material_dynamic_neutral30"
        android:textSize="16sp"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>